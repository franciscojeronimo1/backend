// learn more about it in the docs: https://pris.ly/d/prisma-schema


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentMethod {
  PIX
  CARTAO
  DINHEIRO
  OUTROS
}

// cruar uma migration: yarn prisma migrate dev
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("users")
}

model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  has_sizes   Boolean  @default(false)
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  products    Product[]
  size_prices CategorySizePrice[]

  @@map("categories")
}

model Product {
  id                String   @id @default(uuid())
  name              String
  price             Float?   // Preço fixo (se não usar tamanhos)
  description       String
  banner            String?  // Imagem opcional
  has_custom_prices Boolean  @default(false)
  created_at        DateTime @default(now())
  updated_at        DateTime @default(now())

  category_id       String
  category          Category @relation(fields: [category_id], references: [id])
  
  custom_prices     ProductSizePrice[]
  items             Item[]
  items_2           Item[]   @relation("ItemProduct2")

  @@map("products")
}

model order {
  id             String        @id @default(uuid())
  table          Int
  status         Boolean       @default(false)
  drafted        Boolean       @default(true)
  name           String?
  address        String?       // Endereço de entrega (opcional)
  payment_method PaymentMethod? // Forma de pagamento (opcional)

  created_at     DateTime      @default(now())
  updated_at     DateTime      @default(now())


  @@map("orders")
  items          Item[]
}

model ProductSize {
  id              String   @id @default(uuid())
  name            String   @unique  // "P", "M", "G", "F"
  display         String   // "Pequena", "Média", "Grande", "Família"
  order           Int      // Ordem de exibição

  category_prices CategorySizePrice[]
  product_prices  ProductSizePrice[]
  items           Item[]
  items_2         Item[]   @relation("ItemSize2")

  @@map("product_sizes")
}

model CategorySizePrice {
  id          String   @id @default(uuid())
  category_id String
  size_id     String
  price       Float

  category    Category    @relation(fields: [category_id], references: [id], onDelete: Cascade)
  size        ProductSize @relation(fields: [size_id], references: [id], onDelete: Cascade)

  @@unique([category_id, size_id])
  @@map("category_size_prices")
}

model ProductSizePrice {
  id          String   @id @default(uuid())
  product_id  String
  size_id     String
  price       Float

  product     Product     @relation(fields: [product_id], references: [id], onDelete: Cascade)
  size        ProductSize @relation(fields: [size_id], references: [id], onDelete: Cascade)

  @@unique([product_id, size_id])
  @@map("product_size_prices")
}

model Item {
  id          String   @id @default(uuid())
  amount      Int
  price       Float    // Preço no momento da venda (histórico)
  size_id     String?
  product_id_2 String?  // Segundo sabor (pizza meia a meia)
  size_id_2   String?  // Tamanho do segundo sabor (deve ser igual a size_id)
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  order_id    String
  product_id  String
  order       order        @relation(fields: [order_id], references: [id])
  product     Product      @relation(fields: [product_id], references: [id])
  size        ProductSize? @relation(fields: [size_id], references: [id])
  product_2   Product?     @relation("ItemProduct2", fields: [product_id_2], references: [id])
  size_2      ProductSize? @relation("ItemSize2", fields: [size_id_2], references: [id])

  @@map("items")
}